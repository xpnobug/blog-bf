.ted
   each i in site.data.ted
    .card
     .card-img(data-src="" style="background-image: url("+i.bg_cover+");")
     .card-info
        p.text-title= i.title
        p.text-body= i.desc
        button.card-button
         a(href=url_for(i.url)) READ MORE
style.
    .ted {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
    }
    .card {
        width: 190px;
        height: 254px;
        border-radius: 1em;
        padding: 1.9rem;
        background: #f5f5f5;
        position: relative;
        display: flex;
        align-items: flex-end;
        transition: 0.4s ease-out;
        box-shadow: 0px 7px 20px rgba(43, 8, 37, 0.2);
        margin: 27px 10px 10px 10px;
    }

    .card:before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        display: block;
        width: 100%;
        height: 100%;
        /*background: rgba(238, 116, 116, 0.4);*/
        z-index: 2;
        transition: 0.5s;
        border-radius: 1em;
    }

    .card-info {
        position: relative;
        z-index: 3;
        color: #f5f5f5;
        opacity: 0;
        transform: translateY(20%);
        transition: 0.5s;
        width: 100%;
    }

    /*Text*/
    .text-title {
        font-size: 0.5rem;
        font-weight: 500;
        color: coral;
    }

    .text-body {
        letter-spacing: 1px;
        font-size: 0.9rem;
        margin: 5px 0 15px 0;
        color: coral;
        white-space: nowrap;
        /* 2.超出的部分隐藏 */
        overflow: hidden;
        /* 3.文字用省略号替代超出的部分 */
        text-overflow: ellipsis;
    }

    /*Button*/
    .card-button {
        padding: 0.6rem;
        outline: none;
        border: none;
        border-radius: 4px;
        background: #ee9ca7;
        color: white;
        font-weight: bold;
        transition: 0.4s ease;
    }
    .card-button a{
        color: black;
        text-decoration: none;
    }

    /*Image*/
    .card-img {
        width: 100%;
        height: 100%;
        position: absolute;
        top: 0;
        left: 0;
        background: #ee9ca7;
        /*background: url("https://pic1.zhimg.com/v2-c8abae935169a75f5efce1c9230554d9_r.jpg?source=1940ef5c");*/
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center;
        border-radius: 1em;
    }

    /*Hover*/
    .card:hover {
        transform: translateY(5%);
    }

    .card:hover:before {
        opacity: 1;
    }

    .card:hover .card-info {
        opacity: 1;
        transform: translateY(0);
    }

    .card-button:hover {
        background: rgba(218, 77, 77, 0.4);
        color: #f5f5f5;
    }